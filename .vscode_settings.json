{
  "window.zoomLevel": 0,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.lineHeight": 22,
  "editor.letterSpacing": 0.1,
  "workbench.editor.tabSizing": "shrink",
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  // this isn't really underline but we hack it to be a thicker cursor
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.detectIndentation": true,
  "editor.wordWrap": "on",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.fontWeight": "400",
  "editor.cursorBlinking": "solid",
  "editor.colorDecorators": false,
  "editor.minimap.enabled": false,
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "left",
  "gitlens.blame.line.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [
      80,
      100,
      120
  ],
  "editor.minimap.showSlider": "always",
  "workbench.startupEditor": "newUntitledFile",
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/.next": true
  },
  "files.insertFinalNewline": true,
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "vscode-icons",
  // You can set it off
  "workbench.editor.tabCloseButton": "right",
  "emmet.includeLanguages": {
      "javascript": "javascriptreact"
  },
  // show snippets before any other auto completion
  "editor.snippetSuggestions": "top",
  "editor.formatOnType": false,
  // this lets you quickly open multiple items in a row and not have the previous ones closed on you
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "sublimeTextKeymap.promptV3Features": true,
  // These are all my auto-save configs
  "editor.formatOnSave": false,
  // turn it off for JS
  "[javascript]": {
      "editor.formatOnSave": false,
      "editor.detectIndentation": true,
  },
  "[scss]": {
      "editor.formatOnSave": false,
      "editor.detectIndentation": true,
  },
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "search.exclude": {
      "**/*.map": true,
      "**/node_modules": true,
      "**/build": true,
      "**/public": true
  },
  "terminal.integrated.fontFamily": "DroidSansMono Nerd Font",
  "editor.formatOnPaste": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
}
